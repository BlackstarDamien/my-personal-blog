{
    "name": "My Personal Blog Dev Container",
    "dockerComposeFile": "docker-compose.dev.yml",
    "service": "app",
    "workspaceFolder": "/workspaces/my-personal-blog",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-azuretools.vscode-docker",
                "github.vscode-github-actions",
                "eamodio.gitlens"
            ]
        },
        "settings": {
            "git.path": "/usr/bin/git"
        }
    },
    "forwardPorts": [8080, 4444, 7900],
    "onCreateCommand": "apt-get update && apt-get install -y git curl"
}